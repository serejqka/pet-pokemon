{
  "env": {
    "browser": true,
    "es2021": true
    // "node": true
  },
  "extends": [
    "airbnb/hooks",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "globalReturn": false,
      "restParams": true,
      "spread": true
    },
    "allowImportExportEverywhere": true
  },
  "overrides": [],
  "plugins": [
    "import",
    "react",
    "prettier",
    "autofix"
  ],
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  },
  "rules": {
    "prettier/prettier": "error",

    // Rules that can fixed automatically
    "autofix/no-unused-vars": "warn",
    "autofix/no-console": "warn",
    "autofix/no-debugger": "warn",
    "autofix/no-plusplus": "warn",
    "autofix/eqeqeq": "warn",
    "autofix/no-alert": "warn",
    "autofix/no-else-return": "warn",
    "autofix/no-multiple-empty-lines": "warn",
    "autofix/no-var": "warn",
    "autofix/no-useless-concat": "warn",
    "autofix/no-lonely-if": "warn",
    "autofix/prefer-template": "warn"
  }
}
